{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "mocha", "@wdio/globals/types"],
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "shared/*": ["shared/*"],
      "android/*": ["android/*"],
      "ios/*": ["ios/*"]
    }
  },
  "include": [
    "shared/**/*.ts",
    "android/**/*.ts",
    "ios/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "logs",
    "screenshots",
  ],
  "ts-node": {
    "esm": false,
    "transpileOnly": false,
    "typeCheck": true,
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2020",
      "moduleResolution": "node",
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": false
    }
  }
}