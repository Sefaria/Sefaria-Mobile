{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "noImplicitAny": true, // Disallow implicit `any` types
    "noImplicitReturns": true, // Ensure all functions return a value
    "noFallthroughCasesInSwitch": true, // Prevent fallthrough in switch statements
    "noUnusedLocals": true, // Report unused local variables
    "noUnusedParameters": true, // Report unused function parameters
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node", "@wdio/globals/types", "mocha", "expect-webdriverio"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": false, // Stricter import rules
    "outDir": "./dist",
    "skipLibCheck": true // Disable type checking for declaration files
  },
  "devDependencies": {
    "mocha": "^11.7.1",
    "ts-mocha": "^11.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "mocha": {
    "ui": "bdd",
    "timeout": 10000,
    "require": ["ts-node/register"],
    "files": "testing-framework/tests/**/*.spec.ts"
  },
  "include": ["testing-framework/tests/**/*.ts", "testing-framework/tests/**/*.d.ts", "android/testing-framework/tests/**/*.ts", "android/testing-framework/tests/**/*.d.ts"]
}